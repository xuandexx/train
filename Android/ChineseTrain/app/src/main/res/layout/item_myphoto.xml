<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:ignore="UselessParent" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            
            android:gravity="center|top" >

            <TextView
                android:id="@+id/item_myphoto_tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/black"
                android:gravity="center|bottom"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/item_myphoto_tv_month"
                style="@style/tv_content_14_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_myphoto_tv_day"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/item_myphoto_tv_day"
                android:text="5æœˆ"
                android:layout_marginBottom="2dp"
                android:gravity="center|bottom"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/item_myphoto_imgbut_camera"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gray"
                android:src="@drawable/cameras_1"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content" >

                <GridView
                    android:id="@+id/item_myphoto_gridview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:columnWidth="45dp"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5dp" >
                </GridView>

                <TextView
                    android:id="@+id/item_myphoto_tv_text"
                    style="@style/tv_content_14_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:maxLines="2"
                    android:text="TextViewTextView"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>