<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:ignore="UselessParent" >

        <ImageView
            android:id="@+id/ds_img_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bikers"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/dsa_cb"
            android:layout_toRightOf="@+id/ds_img_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ds_tv_name"
                style="@style/tv_content_17_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:singleLine="true"
                android:text="超高的"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/das_rl_sex"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/man_1"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/das_tv_age"
                    style="@style/tv_content_14_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="23"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <TextView
                android:id="@+id/ds_tv_jl"
                style="@style/tv_content_14_gar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="驾照39年,执教8年"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/ds_img_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/score"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/dsa_cb"
            android:layout_toRightOf="@+id/ds_img_icon"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ds_tv_address"
                style="@style/tv_content_14_gar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="上海市"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/ds_tv_regional"
                style="@style/tv_content_14_gar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="宝杨路668号"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/dsa_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cb"
            android:layout_marginRight="5dp"
            android:button="@null" />
    </RelativeLayout>

</RelativeLayout>