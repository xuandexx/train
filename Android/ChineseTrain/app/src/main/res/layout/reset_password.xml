<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/view_top" />

    <cn.ieauto.autogroup.android.widget.MyEditText
        android:id="@+id/reset_password_ed1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/edit_but"
        android:ems="10"
        android:hint="@string/reset_password_1"
        tools:ignore="TextFields" />

    <include layout="@layout/ieauto_autogroup_horizontal" />

    <cn.ieauto.autogroup.android.widget.MyEditText
        android:id="@+id/reset_password_ed2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_but"
        android:ems="10"
        android:hint="@string/reset_password_2"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/reset_password_perfection"
        style="@style/tv_content_17_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_ok"
        android:text="@string/resgister_perfection_perfection"
        tools:ignore="ButtonStyle" />

</LinearLayout>