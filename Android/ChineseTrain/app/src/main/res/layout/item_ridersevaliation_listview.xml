<?xml version="1.0" encoding="utf-8"?>
<!-- 车友评价的listview_item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/et_img_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/bikers"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/et_rl_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/et_img_icon" >

            <TextView
                android:id="@+id/et_tv_level"
                style="@style/tv_content_14_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ridersevaluation_listview_item" />

            <TextView
                android:id="@+id/et_tv_l"
                style="@style/tv_content_14_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="5"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/et_tv_content"
            style="@style/tv_content_14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_img_icon"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_rl_l"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/et_img_icon"
            android:layout_marginRight="10dp"
            android:text="TextView" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#808080" />

</RelativeLayout>