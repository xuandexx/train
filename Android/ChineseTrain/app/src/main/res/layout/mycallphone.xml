<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/view_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize" >

            <FrameLayout
                android:id="@+id/Framelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp" >

                    <ImageView
                        android:id="@+id/mycallphone_img_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/wx_3"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mycallphone_img_picture"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/myphoto_nickname"
                        style="@style/tv_content_17_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/linearLayout1"
                        android:layout_marginRight="24dp"
                        android:layout_toLeftOf="@+id/mycallphone_img_face"
                        android:text="Name"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/mycallphone_img_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/myphoto_nickname"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/wx_2"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </FrameLayout>

            <ListView
                android:id="@+id/mycallphone_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray"
                android:dividerHeight="1px"
                tools:ignore="NestedScrolling" >

            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>