<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/view_top_ll_left"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@drawable/b1_004_1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/datafill_img_back"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/button_return"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/datafill_tv_linear"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/datafill_img_back"
            android:background="@color/black"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" />

        <TextView
            android:id="@+id/datafill_tv_title"
            style="@style/tv_title_21_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/datafill_img_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/datafill_tv_linear"
            android:background="@drawable/logo_new_1"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/datafill_but_ok"
            style="@style/tv_content_14_white"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_style_alert_dialog_button_pressed"
            android:text="保存"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <EditText
        android:id="@+id/datafill_ed_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view_top_ll_left"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_but"
        android:ems="10"
        tools:ignore="TextFields" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/datafill_tv_text"
        style="@style/tv_content_14_gar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/datafill_ed_text"
        android:layout_alignRight="@+id/datafill_ed_text"
        android:layout_below="@+id/datafill_ed_text"
        android:layout_marginTop="20dp"
        android:gravity="left"
        tools:ignore="HardcodedText" />

</RelativeLayout>