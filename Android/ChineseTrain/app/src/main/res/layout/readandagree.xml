<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/view_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/readandagre_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13213"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/readandagre_Ck"
                style="@style/tv_content_17_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:text="@string/resgister_perfection_readandagree" />

            <Button
                android:id="@+id/readandagree_but1"
                style="@style/tv_content_17_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_ok"
                android:text="@string/resgister_perfection_perfection" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>