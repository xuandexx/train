<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/view_top" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vehicledetails_viewpager"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1" >
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/vehicledetails_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/vehicledetails_title_1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/vehicledetails_textView3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/vehicledetails_title_2"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/vehicledetails_textView4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/vehicledetails_title_3"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/vehicledetails_title_4"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/vehicledetails_textView13"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="沪A"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:ignore="DisableBaselineAlignment" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicledetails_title_5"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicledetails_title_6"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicledetails_title_7"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicledetails_title_8"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.52"
                        android:text="@string/serviceproviders_number"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="InefficientWeight" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/vehicledetails_title_9"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.42"
                    android:orientation="vertical"
                    tools:ignore="InefficientWeight" >

                    <TextView
                        android:id="@+id/vehicledetails_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2010年9月"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/vehicledetails_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13.5万公里"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/vehicledetails_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23.4万元"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/vehicledetails_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买家承担"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/vehicledetails_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18901330037"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/vehicledetails_readme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="车辆9成新，全程4S店保养，真实公里数……"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="TextFields,HardcodedText" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/serviceproviders_evaluation"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="3936条"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/vehicledetails_tv18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/button_selector_mylift"
                    android:text="@string/serviceproviders_viewdetails"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <TextView
                android:id="@+id/vehicledetails_tv20"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_ok"
                android:gravity="center"
                android:text="@string/serviceproviders_iwantevaluate"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="--------------------------------------------------------------------------------"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/vehicledetails_tv21"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_ok"
                android:gravity="center"
                android:text="@string/serviceproviders_viewinginformation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>