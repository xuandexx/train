<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_top"
        layout="@layout/view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <cn.ieauto.autogroup.android.widget.MyEditText
            android:id="@+id/froget_password_phone"
            style="@style/tv_content_17_black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_but"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/sms_verification_hint_1"
            android:inputType="phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <cn.ieauto.autogroup.android.widget.MyEditText
                android:id="@+id/froget_recode"
                style="@style/tv_content_17_black"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="@drawable/edit_but"
                android:gravity="center"
                android:hint="@string/input_request_code"
                android:inputType="number" />

            <TextView
                android:id="@+id/froget_resend"
                style="@style/tv_content_14_black"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/ic_preference_single_normal"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/sms_verification_yzm" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/sms_verification_next"
        style="@style/tv_content_17_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_ok"
        android:text="@string/next_step" />

</LinearLayout>