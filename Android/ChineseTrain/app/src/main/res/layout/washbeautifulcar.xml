<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <include
        android:id="@+id/view_center"
        android:layout_alignParentTop="true"
        layout="@layout/washbeautiful_car_list" />

    <TextView
        android:id="@+id/view_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/view_center"
        android:background="@color/gray" />

    <ListView
        android:id="@+id/ab_list"
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/at_rl_bottom"
        android:layout_below="@+id/view_horizontal"
        android:background="#fff"
        android:divider="@color/gray"
        android:dividerHeight="1px" >
    </ListView>

    <RelativeLayout
        android:id="@+id/at_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" >

        <Button
            android:id="@+id/wash_btn_ok"
            style="@style/tv_content_17_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ok"
            android:text="确  定"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

</RelativeLayout>