<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/item_mycollection_tv_name"
            style="@style/tv_content_17_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_mycollection_img_avatar"
            android:gravity="center"
            android:text="name"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/item_mycollection_tv_time"
            style="@style/tv_content_14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_mycollection_tv_name"
            android:gravity="right"
            android:text="time"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/item_mycollection_img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/of_line_face"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_mycollection_tv_name"
            android:layout_toRightOf="@+id/item_mycollection_img_avatar"
            tools:ignore="UseCompoundDrawables" >

            <ImageView
                android:id="@+id/item_mycollection_img_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/item_mycollection_tv_content"
                style="@style/tv_content_17_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>