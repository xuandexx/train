<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp" >

    <ImageView
        android:id="@+id/item_carcirc_listview_face"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/of_line_face"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_carcirc_listview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/item_carcirc_listview_face"
        android:gravity="left"
        android:text="name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/item_carcirc_listview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_carcirc_listview_face"
        android:layout_alignLeft="@+id/item_carcirc_listview_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:text="description"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/item_carcirc_listview_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_carcirc_listview_description"
        android:layout_below="@+id/item_carcirc_listview_description"
        android:src="@drawable/enter_but_select"
        tools:ignore="ContentDescription" />

</RelativeLayout>